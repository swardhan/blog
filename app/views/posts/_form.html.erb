<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  <div class="errors">
    <h2><%= pluralize(@post.errors.count, "error") %> Prevented This post from saving.</h2>
  </div>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%=  f.label :body %><br>
    <%= f.text_area :body %> <br>
  </p>

  <p>
    <%= f.submit %>
  </p>


<% end %>
